{
  "name": "@sophon-labs/account-root",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "------------------------- BUILDING ------------------------": "",
    "build:all": "yarn workspaces run build",
    "build:packages": "yarn workspaces foreach -Apt --exclude @sophon-labs/account-server run build",
    "------------------------- LINTING -------------------------": "",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "------------------------- TESTING -------------------------": "",
    "test": "yarn workspaces foreach -Apt --exclude @sophon-labs/account-server run test",
    "test:ci": "yarn workspaces foreach -Apt --exclude @sophon-labs/account-server run test:ci",
    "------------------------- RELEASE -------------------------": "",
    "release:generate": "changeset",
    "release:version": "changeset version && yarn",
    "release:publish": "changeset publish",
    "release:pre:enter": "changeset pre enter next",
    "release:pre:exit": "changeset pre exit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@changesets/cli": "^2.29.5",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "react-native-webview": "13.15.0",
    "zksync-sso": "github:sophon-org/zksync-sso-preview#20250901_1"
  }
}
