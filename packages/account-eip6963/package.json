{
  "name": "@sophon-labs/account-eip6963",
  "version": "2.0.1",
  "description": "EIP-6963 provider for Sophon SSO",
  "license": "MIT",
  "author": "Sophon Team",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    },
    "./mainnet": {
      "import": {
        "types": "./dist/mainnet.d.ts",
        "import": "./dist/mainnet.js"
      },
      "require": {
        "types": "./dist/mainnet.d.cts",
        "require": "./dist/mainnet.cjs"
      }
    },
    "./testnet": {
      "import": {
        "types": "./dist/testnet.d.ts",
        "import": "./dist/testnet.js"
      },
      "require": {
        "types": "./dist/testnet.d.cts",
        "require": "./dist/testnet.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "------------------------- UNIT TESTING -------------------------": "",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage",
    "----------------------- INTEGRATION TESTING ---------------------": "",
    "test:e2e:ci": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:dev": "npm-run-all --parallel dev test:e2e:ui"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.54.1",
    "@types/node": "^20.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@sophon-labs/account-core": "2.0.1",
    "eventemitter3": "^5.0.1",
    "json-rpc-2.0": "^1.7.1",
    "zksync-sso": "github:sophon-org/zksync-sso-preview#20250901_1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
