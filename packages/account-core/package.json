{
  "name": "@sophon-labs/account-core",
  "description": "Core package for the Sophon Account with common utilities",
  "version": "2.0.7-next.0",
  "license": "MIT",
  "author": "Sophon Team",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "------------------------- TESTING -------------------------": "",
    "test": "vitest --watch false --passWithNoTests",
    "test:dev": "vitest --watch true --passWithNoTests",
    "test:ci": "vitest --watch false --passWithNoTests --coverage"
  },
  "peerDependencies": {
    "viem": ">=2.21.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "viem": "2.36.0",
    "vite": "^7.0.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "text-encoding-polyfill": "^0.6.7"
  }
}
