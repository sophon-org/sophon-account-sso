{
  "name": "@sophon-labs/account-react",
  "version": "2.0.0-next.39",
  "description": "React components for Sophon Account",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage"
  },
  "dependencies": {
    "@sophon-labs/account-connector": "2.0.0-next.39",
    "@sophon-labs/account-core": "2.0.0-next.39",
    "axios": "^1.11.0",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.1.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wagmi": "^2.16.4"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5",
    "react": ">=18",
    "react-dom": ">=18",
    "viem": ">=2",
    "wagmi": ">=2"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    },
    "./hooks": {
      "import": {
        "types": "./dist/hooks/index.d.ts",
        "import": "./dist/hooks/index.js"
      },
      "require": {
        "types": "./dist/hooks/index.d.cts",
        "require": "./dist/hooks/index.cjs"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components/index.d.ts",
        "import": "./dist/components/index.js"
      },
      "require": {
        "types": "./dist/components/index.d.cts",
        "require": "./dist/components/index.cjs"
      }
    }
  }
}
