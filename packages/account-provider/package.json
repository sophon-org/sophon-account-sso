{
  "name": "@sophon-labs/account-provider",
  "version": "3.0.0-next.15",
  "description": "EIP-1193 provider for Sophon Account",
  "license": "MIT",
  "author": "Sophon Team",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    },
    "./mainnet": {
      "import": {
        "types": "./dist/mainnet.d.ts",
        "import": "./dist/mainnet.js"
      },
      "require": {
        "types": "./dist/mainnet.d.cts",
        "require": "./dist/mainnet.cjs"
      }
    },
    "./testnet": {
      "import": {
        "types": "./dist/testnet.d.ts",
        "import": "./dist/testnet.js"
      },
      "require": {
        "types": "./dist/testnet.d.cts",
        "require": "./dist/testnet.cjs"
      }
    }
  },
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "------------------------- UNIT TESTING -------------------------": "",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^20.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "viem": "2.38.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@sophon-labs/account-communicator": "3.0.0-next.15",
    "@sophon-labs/account-core": "3.0.0-next.15",
    "eventemitter3": "^5.0.1",
    "json-rpc-2.0": "^1.7.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "viem": ">=2.21.0"
  }
}
